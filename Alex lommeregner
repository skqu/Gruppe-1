# Velkomst
print("Velkommen til lommeregneren!")

while True:
    # Valgmulighederne
    print("Vælg en regnemetode:")
    print("1. Addition, 2. Subtraktion, 3. Multiplikation, 4. Division")

    # Input brugerens valg
    valg = input("Indtast dit valg (1/2/3/4): ")

    # Tjek om valget er gyldigt
    if valg > '4' or valg < '1':
        print("Ugyldigt valg. Prøv igen.")
    else:
        # Hvis valget er gyldigt, fortsæt med den tilhørende kode
        if valg == '1':
            tal1 = float(input("Indtast det første tal: "))
            tal2 = float(input("Indtast det andet tal: "))
            resultat = tal1 + tal2
            print("Resultatet af additionen er:", resultat)
        elif valg == '2':
            tal1 = float(input("Indtast det første tal: "))
            tal2 = float(input("Indtast det andet tal: "))
            resultat = tal1 - tal2
            print("Resultatet af subtraktionen er:", resultat)
        elif valg == '3':
            tal1 = float(input("Indtast det første tal: "))
            tal2 = float(input("Indtast det andet tal: "))
            resultat = tal1 * tal2
            print("Resultatet af multiplikationen er:", resultat)
        elif valg == '4':
            tal1 = float(input("Indtast det første tal: "))
            tal2 = float(input("Indtast det andet tal: "))
            if tal2 == 0:
                print("Kan ikke dividere med nul.")
            else:
                resultat = tal1 / tal2
                print("Resultatet af divisionen er:", resultat)
 # Vil du forsætte?            
    forsæt = input("Vil du regne et nyt stykke? ja/nej?   ")
    if "ja" and "j" not in forsæt.lower():
        break
   


print("Farvel og tak")
